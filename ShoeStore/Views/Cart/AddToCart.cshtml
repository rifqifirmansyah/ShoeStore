@model IEnumerable<ShoeStore.Models.Shoe>

@{
    ViewData["Title"] = "AddToCart";
}

<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShoeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoeImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShoeName)
                </td>
                <td>
                    <img src="@(ViewBag.Base64String = "data:image/jpg;base64," + Convert.ToBase64String(item.ShoeImage, 0, item.ShoeImage.Length))" style="max-width:100px;max-height:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-controller="Cart" asp-action="Details" asp-route-id="@item.ShoeId">Details</a> |
                    <a asp-controller="Cart" asp-action="Delete" asp-route-id="@item.ShoeId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
